extend layout

include mixins/_storeCard

block content
  .inner
    h2 #{selectedTag || 'Tags'}
    //- pre= h.dump(tags)
    ul.tags
      each t in tags
        li.tag
          a.tag__link(href=`/tags/${t._id}`, class=(t._id === selectedTag ? 'tag__link--active' : ''))
            span.tag__text= t._id
            span.tag__count= t.count
    //- pre= h.dump(stores)
    .stores
      each store in stores
        +storeCard(store)
